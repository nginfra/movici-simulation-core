{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/water_network_simulation/1.0.0",
  "type": "object",
  "required": ["dataset"],
  "properties": {
    "dataset": {
      "type": "string",
      "movici.type": "dataset",
      "description": "Water network dataset name"
    },
    "entity_groups": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["junctions", "tanks", "reservoirs", "pipes", "pumps", "valves"]
      },
      "default": ["junctions", "pipes", "reservoirs"],
      "description": "Entity groups to include from the dataset"
    },
    "simulation_duration": {
      "type": "number",
      "description": "Total simulation duration in seconds"
    },
    "hydraulic_timestep": {
      "type": "number",
      "default": 3600,
      "description": "Hydraulic timestep in seconds (default: 3600)"
    },
    "report_timestep": {
      "type": "number",
      "description": "Report timestep in seconds (default: same as hydraulic_timestep)"
    },
    "options": {
      "type": "object",
      "description": "WNTR solver options, keyed by section name (e.g. 'hydraulic')",
      "additionalProperties": {
        "type": "object"
      }
    }
  },
  "additionalProperties": false
}
